<style>
  /* Animación de entrada desde la izquierda para la primera tarjeta */
   @keyframes slideInFromLeft {
     0% {
       transform: translateX(-100%);
       opacity: 0;
     }
     100% {
       transform: translateX(0);
       opacity: 1;
     }
   }

   /* Animación de entrada desde la derecha para la segunda tarjeta */
   @keyframes slideInFromRight {
     0% {
       transform: translateX(100%);
       opacity: 0;
     }
     100% {
       transform: translateX(0);
       opacity: 1;
     }
   }
 
   .footer-card-left {
     animation: slideInFromLeft 1.2s ease-out 0.3s both;
   }

   .footer-card-right {
     animation: slideInFromRight 1.2s ease-out 0.5s both;
   }
 
   /* Efectos hover sutiles */
   .footer-card-left:hover,
   .footer-card-right:hover {
     transform: translateY(-2px);
     box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
     transition: all 0.3s ease;
   }
</style>