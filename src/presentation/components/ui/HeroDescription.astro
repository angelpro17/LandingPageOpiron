---
interface Props {
  text: string;
  class?: string;
}

const { text, class: className = '' } = Astro.props;
---

<p class={`text-xl text-gray-600 mb-8 max-w-3xl mx-auto opacity-0 transform translate-y-8 transition-all duration-1000 ease-out delay-300 ${className}`} id="hero-description">
  <slot>{text}</slot>
</p>

<script>
  // Animación de entrada para la descripción
  document.addEventListener('DOMContentLoaded', () => {
    const heroDescription = document.getElementById('hero-description');
    if (heroDescription) {
      setTimeout(() => {
        heroDescription.classList.remove('opacity-0', 'translate-y-8');
        heroDescription.classList.add('opacity-100', 'translate-y-0');
      }, 600);
    }
  });
</script>